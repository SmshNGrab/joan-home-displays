# Environment Variables Template
# Copy this file to .env and fill in your values.
# Never commit .env to version control.

# ── Visionect Server (VSS) ─────────────────────────────────
# LAN IP address of your server (the machine running Docker)
VSS_HOST=192.168.1.x

# VSS API port (default: 8081)
VSS_PORT=8081

# VSS API credentials — find these in the VSS admin panel
# Admin → Settings → API → API Key / API Secret
VSS_API_KEY=your_api_key_here
VSS_API_SECRET=your_api_secret_here

# ── Static File Server ─────────────────────────────────────
# Port where nginx serves your HTML display files (default: 8124)
WWW_PORT=8124

# Absolute path to the directory nginx serves
# This is where you drop your .html files
WWW_PATH=/home/ubuntu/homeassistant/config/www

# ── Pi-hole ────────────────────────────────────────────────
# LAN IP of your Pi-hole instance (often same as VSS_HOST)
PIHOLE_HOST=192.168.1.x

# Pi-hole web interface password (needed for v6 API auth)
PIHOLE_PASSWORD=your_pihole_password_here

# ── System Monitor ─────────────────────────────────────────
# Where sysmon-update.py writes its JSON output
# Must be inside WWW_PATH so sysmon.html can fetch it
SYSMON_OUTPUT=/home/ubuntu/homeassistant/config/www/sysmon.json

# Timezone offset from UTC for display timestamps
# CST = -6, EST = -5, MST = -7, PST = -8
# During daylight saving time: CST = -5, EST = -4, etc.
UTC_OFFSET_HOURS=-6
